<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_background"
    android:padding="0dp"
    android:textIsSelectable="true"
    tools:context="pl.appnode.GTinfo.GameServerItemDetailFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:weightSum="1">
    <TextView
        android:id="@+id/detail_server_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/card_server_name_default"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <ProgressBar
        android:id="@+id/webview_progress_bar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_margin="0dp"
        />
    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gameServerInfoWebview"
        android:gravity ="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
