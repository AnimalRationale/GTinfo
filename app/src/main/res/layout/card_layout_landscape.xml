<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="1dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_normal"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="4dip">
        <ImageView
            android:id="@+id/image_rating"
            android:layout_height="36dp"
            android:layout_width="36dp"
            android:layout_margin="8dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_local_play_grey_48px"
            />
        <TextView
            android:id="@+id/server_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/image_rating"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/card_server_name_default"
            android:textStyle="bold"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/server_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/image_rating"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignWithParentIfMissing="true"
            android:text="@string/card_server_address_default"
            android:textSize="11sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>