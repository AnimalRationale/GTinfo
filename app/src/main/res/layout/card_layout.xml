<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="1dp"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_normal"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dip">
        <RelativeLayout
            android:id="@+id/server_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_rating"
                android:layout_height="42dp"
                android:layout_width="42dp"
                android:layout_margin="4dp"
                android:paddingTop="1dp"
                android:paddingBottom="4dp"
                android:scaleType="centerInside"
                android:background="@drawable/round_grey_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/image_rating"
                android:layout_alignTop="@+id/image_rating"
                android:layout_alignRight="@+id/image_rating"
                android:layout_alignBottom="@+id/image_rating"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/server_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/server_label"
            android:gravity="left"
            android:text="@string/card_server_name_default"
            android:textStyle="bold"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/server_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/server_label"
            android:layout_alignParentBottom="true"
            android:gravity="left"
            android:text="@string/card_server_address_default"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>