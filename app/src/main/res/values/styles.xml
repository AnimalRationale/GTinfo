<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:itemBackground">@color/light_grey</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="alertDialogTheme">@style/dialog</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:itemBackground">@color/dark_grey</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

    <style name="dialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="customRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressTint">@color/icon_list_orange_light</item>
        <item name="android:secondaryProgressTint">@color/transparent</item>
    </style>

</resources>
